#include <Wire.h>
#include <LiquidCrystal_I2C.h>
#include <Adafruit_MPU6050.h>
#include <Adafruit_Sensor.h>
#include "DHT.h"

// -------- PIN DEFINITIONS --------
#define DHTPIN 15
#define DHTTYPE DHT22
#define LED_PIN 2
#define BUZZER_PIN 4

// -------- OBJECTS --------
DHT dht(DHTPIN, DHTTYPE);
LiquidCrystal_I2C lcd(0x27, 16, 2);
Adafruit_MPU6050 mpu;

void setup() {
  Serial.begin(115200);

  pinMode(LED_PIN, OUTPUT);
  pinMode(BUZZER_PIN, OUTPUT);

  digitalWrite(LED_PIN, LOW);
  digitalWrite(BUZZER_PIN, LOW);

  // Start sensors
  Wire.begin();
  dht.begin();
  lcd.init();
  lcd.backlight();

  if (!mpu.begin()) {
    Serial.println("MPU6050 not detected");
    while (1);
  }

  // Startup message
  lcd.setCursor(0, 0);
  lcd.print("Motor Monitor");
  lcd.setCursor(0, 1);
  lcd.print("System Ready");
  delay(2000);
  lcd.clear();

  Serial.println("System Started");
}

void loop() {
  // Read MPU6050 data
  sensors_event_t a, g, temp;
  mpu.getEvent(&a, &g, &temp);

  // Calculate vibration level
  float vibration =
    abs(a.acceleration.x) +
    abs(a.acceleration.y) +
    abs(a.acceleration.z);

  // Read temperature from DHT22
  float temperature = dht.readTemperature();

  Serial.print("Vibration: ");
  Serial.print(vibration);
  Serial.print(" | Temp: ");
  Serial.print(temperature);
  Serial.println(" C");

  lcd.clear();

  // -------- DECISION LOGIC --------
  if (vibration > 30 && temperature > 60) {
    // FAILURE SOON
    lcd.setCursor(0, 0);
    lcd.print("STATUS:");
    lcd.setCursor(0, 1);
    lcd.print("FAILURE SOON");

    digitalWrite(LED_PIN, HIGH);
    digitalWrite(BUZZER_PIN, HIGH);
  }
  else if (vibration > 20 || temperature > 45) {
    // MAINTENANCE REQUIRED
    lcd.setCursor(0, 0);
    lcd.print("STATUS:");
    lcd.setCursor(0, 1);
    lcd.print("MAINTENANCE");

    digitalWrite(LED_PIN, HIGH);
    digitalWrite(BUZZER_PIN, LOW);
  }
  else {
    // HEALTHY
    lcd.setCursor(0, 0);
    lcd.print("STATUS:");
    lcd.setCursor(0, 1);
    lcd.print("HEALTHY");

    digitalWrite(LED_PIN, LOW);
    digitalWrite(BUZZER_PIN, LOW);
  }

  delay(2000);
}
